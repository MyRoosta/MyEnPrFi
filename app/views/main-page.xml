<?xml version="1.0" encoding="UTF-8"?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Language Learning Player" />
    
    <TabView>
        <!-- Library Tab -->
        <TabViewItem title="Library">
            <GridLayout>
                <ListView items="{{ audioTracks }}" itemTap="{{ onTrackSelect }}">
                    <ListView.itemTemplate>
                        <GridLayout columns="*, auto" class="track-item">
                            <Label col="0" text="{{ title }}" />
                            <Label col="1" text="{{ duration | timeFormat }}" />
                        </GridLayout>
                    </ListView.itemTemplate>
                </ListView>
            </GridLayout>
        </TabViewItem>

        <!-- Playlists Tab -->
        <TabViewItem title="Playlists">
            <GridLayout>
                <ListView items="{{ playlists }}" itemTap="{{ onPlaylistSelect }}">
                    <ListView.itemTemplate>
                        <GridLayout columns="*" class="playlist-item">
                            <Label text="{{ name }}" />
                        </GridLayout>
                    </ListView.itemTemplate>
                </ListView>
            </GridLayout>
        </TabViewItem>

        <!-- Settings Tab -->
        <TabViewItem title="Settings">
            <ScrollView>
                <StackLayout class="settings-container">
                    <Label text="Playback Settings" class="section-header" />
                    <Slider value="{{ playbackSpeed }}" minValue="0.5" maxValue="1.5" />
                    <Label text="Subtitle Settings" class="section-header" />
                    <TextField text="{{ subtitleDelay }}" hint="Subtitle delay (ms)" keyboardType="number" />
                    <Label text="Learning Settings" class="section-header" />
                    <TextField text="{{ repetitions }}" hint="Number of repetitions" keyboardType="number" />
                    <TextField text="{{ repetitionDelay }}" hint="Delay between repetitions (s)" keyboardType="number" />
                </StackLayout>
            </ScrollView>
        </TabViewItem>
    </TabView>
</Page>